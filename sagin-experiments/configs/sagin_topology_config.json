  "network_parameters": {
    "topology_update_interval_sec": 10,
    "propagation_speed_km_s": 300000,
    "enable_handover": true,
    "handover_margin_deg": 2,
    "max_hops": 3,
    "timeout_sec": 90
  },

  "docker_network": {
    "name": "sagin_net",
    "subnet": "172.20.0.0/16",
    "gateway": "172.20.0.1",
    "driver": "bridge"
  },

  "test_scenarios": [
    {
      "id": "scenario_1",
      "name": "Inter-Satellite Link (ISL)",
      "description": "Test PQ-NTOR over ISL between two satellites",
      "path": ["Sat-1", "Sat-2"],
      "expected_delay_ms": 10,
      "expected_distance_km": 3000
    },
    {
      "id": "scenario_2",
      "name": "Satellite-Ground Link",
      "description": "Test PQ-NTOR from satellite to ground station",
      "path": ["Sat-1", "GS-Beijing"],
      "expected_delay_ms": 5,
      "expected_distance_km": 1000
    },
    {
      "id": "scenario_3",
      "name": "Multi-hop Hybrid Link",
      "description": "Test PQ-NTOR through satellite-aircraft-ground",
      "path": ["GS-Beijing", "Sat-1", "Aircraft-1", "GS-London"],
      "expected_delay_ms": 50,
      "expected_distance_km": 8000
    },
    {
      "id": "scenario_4",
      "name": "Global End-to-End",
      "description": "Test PQ-NTOR across continents via satellites",
      "path": ["GS-Beijing", "Sat-1", "Sat-2", "GS-NewYork"],
      "expected_delay_ms": 100,
      "expected_distance_km": 13000
    },
    {
      "id": "scenario_5",
      "name": "Dynamic Handover",
      "description": "Test PQ-NTOR during satellite visibility change",
      "path": ["GS-Beijing", "Sat-1", "GS-London"],
      "dynamic": true,
      "duration_min": 30
    }
  ],

  "tle_update": {
    "source": "https://celestrak.org/NORAD/elements/",
    "update_frequency_days": 7,
    "auto_update": false
  }
}
